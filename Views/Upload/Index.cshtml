@{
    ViewBag.Title = "File Upload";
    Layout = "_Layout";
}

<h2 class="text-center my-4">Upload CSV File</h2>

<p class="text-center mb-5">
    Upload a CSV file, choose an output format (JSON or TXT), and download a ZIP archive with the converted files. Quickly transform and organize your data into usable formats!
</p>

<div class="row justify-content-center">
    <div class="col-lg-6 col-md-8 col-sm-10">
        <form method="post" enctype="multipart/form-data" asp-controller="Upload" asp-action="UploadCsvFile" class="card p-4 shadow-sm">
            <div class="form-group mb-4">
                <label for="csvFile" class="form-label">Select a CSV file:</label>
                <input type="file" id="csvFile" name="csvFile" accept=".csv" required class="form-control">
            </div>
            
            <div class="form-group mb-4">
                <label for="outputFormat" class="form-label">Select Output Format:</label>
                <select id="outputFormat" name="outputFormat" required class="form-select">
                    <option value="json">JSON</option>
                    <option value="txt">Text (TXT)</option>
                </select>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary w-100">Upload</button>
            </div>
        </form>
    </div>
</div>